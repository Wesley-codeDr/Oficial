# ============================================
# WellWave - Environment Variables
# ============================================
# Copy this file to `.env.local` for local development
# Never commit `.env.local` to version control

# ============================================
# DATABASE (Required)
# ============================================
# OPÇÃO 1: Prisma Accelerate (Recomendado para produção)
# Global connection pooling + caching + edge optimization
# Get API key from: https://console.prisma.io/
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_ACCELERATE_API_KEY"

# Direct connection to PostgreSQL - Required for migrations
# Get from Supabase Dashboard > Settings > Database
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:5432/postgres"

# OPÇÃO 2: Supabase direto (sem Accelerate - desenvolvimento local)
# Uncomment below if not using Prisma Accelerate
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:6543/postgres?pgbouncer=true"

# ============================================
# SUPABASE (Required)
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# ============================================
# OPENAI (Optional - for AI features)
# ============================================
# OpenAI API key for ChatWell (EBM Chat) and AI-powered features
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-key-here"

# ============================================
# NEXTAUTH (Required for production)
# ============================================
# Secret for encrypting session tokens
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="generate-a-secure-random-string-here"

# Application URL (used for OAuth callbacks)
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# SENTRY (Optional - for error monitoring)
# ============================================
# Sentry DSN for error tracking
# Get from: https://sentry.io/settings/wellwaveoficial/projects/oficial/keys/
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
SENTRY_ORG="wellwaveoficial"
SENTRY_PROJECT="oficial"

# ============================================
# APPLICATION
# ============================================
# Public application URL (used for emails, redirects, SEO)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Environment (development, production, test)
NODE_ENV="development"

# ============================================
# RATE LIMITING (Optional)
# ============================================
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# ============================================
# ANALYTICS (Optional)
# ============================================
NEXT_PUBLIC_VERCEL_ANALYTICS="true"
NEXT_PUBLIC_VERCEL_SPEED_INSIGHTS="true"

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
NEXT_PUBLIC_FEATURE_CHAT_ENABLED="true"
NEXT_PUBLIC_FEATURE_IMPORT_ENABLED="true"
NEXT_PUBLIC_FEATURE_EBM_ENABLED="true"

# ============================================
# DEVELOPMENT
# ============================================
# Enable bundle analyzer (run 'ANALYZE=true pnpm build')
ANALYZE="false"

# ============================================
# SECURITY NOTES
# ============================================
# ⚠️ NEVER commit .env.local to version control
# ⚠️ All NEXT_PUBLIC_* variables are exposed to the browser
# ⚠️ Keep these SECRET (server-side only):
#    - SUPABASE_SERVICE_ROLE_KEY
#    - OPENAI_API_KEY
#    - NEXTAUTH_SECRET
#    - SENTRY_AUTH_TOKEN
#    - DATABASE_URL credentials
# ============================================
