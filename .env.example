# ===========================================
# WellWave MVP - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database (Prisma)
# Get this from: Supabase Dashboard > Settings > Database > Connection string
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:5432/postgres

# OpenAI API (for EBM Chat)
# Get from: https://platform.openai.com/api-keys
# ChatWell will be unavailable if this is missing or blank
OPENAI_API_KEY=sk-your-openai-key-here

# Mock AI provider (tests/CI)
# Set MOCK_AI=true or AI_PROVIDER=mock to disable external API calls
MOCK_AI=false
MOCK_AI_RESPONSE=ChatWell (modo de teste): resposta simulada para validação do fluxo.

# Sentry (Error Tracking)
# Get from: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Rate Limiter
# Require explicit opt-in to fail-open when the database is unavailable
RATE_LIMIT_FAIL_OPEN=false

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ===========================================
# Notes:
# - Never commit .env.local to version control
# - All NEXT_PUBLIC_* variables are exposed to the browser
# - Keep SUPABASE_SERVICE_ROLE_KEY and OPENAI_API_KEY secret
# ===========================================
